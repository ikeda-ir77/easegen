{
  "name": "ts-portfolio",
  "version": "1.0.0",
  "main": "index.tsx",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write",
    "lint:init": "tslint --init",
    "lint": "tslint -c tslint.json --fix",
    "build": "webpack --progress --colors --mode production",
    "build:css": "webpack --progress --colors --mode production --config webpack.config.withcss.js",
    "dev": "webpack-dev-server --hot --mode development",
    "watch": "webpack --progress --colors --watch --mode development"
  },
  "dependencies": {
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.8",
    "css-loader": "^3.6.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "node": "^14.4.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "sass": "^1.17.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^5.0.0",
    "webpack": "^4.29.5",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,tsx,css,scss,md}": [
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "repository": "git@github.com:ikeda-ica/ts-portfolio.git",
  "author": "ica.ikeda <ikeda@ica.jp>"
}
